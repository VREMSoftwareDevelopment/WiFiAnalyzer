<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.ButtonBarLayout
        style="?android:attr/buttonBarStyle"
        android:id="@+id/graphNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/no_margin"
        android:orientation="horizontal"
        android:padding="@dimen/no_margin"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_half_margin"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/graphNavigationLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/graphNavigationSet1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="100-199" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/graphNavigationSet2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_vertical_half_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="200-299" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/graphNavigationSet3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_vertical_half_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="300-399" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/graphNavigationLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_half_margin"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/graphNavigationSet4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="400-499" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/graphNavigationSet5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_vertical_half_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="500-599" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/graphNavigationSet6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_vertical_half_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    tools:text="600-699" />

            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.ButtonBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/graphRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ViewFlipper
            android:id="@+id/graphFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>